<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_booking_status_bar_height">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_booking_status_bar_height">

            <TextView
                android:id="@+id/activity_add_card_txt_title"
                style="@style/title_14_pink_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/activity_add_card_txt_title" />

            <ImageView
                android:id="@+id/activity_add_card_btn_back"
                android:layout_width="@dimen/activity_booking_btn_back_height"
                android:layout_height="@dimen/activity_booking_btn_back_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_booking_btn_back_margin"
                android:src="@drawable/ic_arrow_back_black_24dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:layout_marginTop="@dimen/text_margin_top"
        android:layout_marginRight="@dimen/text_margin_left"
        android:orientation="vertical">


        <TextView
            style="@style/title_13_black_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin_top_higher"
            android:text="@string/activity_add_card_txt_address" />

        <EditText
            android:id="@+id/activity_add_card_edt_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_booking_edittext_height"
            android:layout_marginTop="@dimen/margin_top_shorter"
            android:background="@drawable/edt_background"
            android:fontFamily="@font/roboto_light"
            android:hint="@string/activity_add_card_txt_address_hint"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            style="@style/title_13_black_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin_top_higher"
            android:text="@string/activity_add_card_txt_name" />

        <EditText
            android:id="@+id/activity_add_card_edt_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_booking_edittext_height"
            android:layout_marginTop="@dimen/margin_top_shorter"
            android:background="@drawable/edt_background"
            android:fontFamily="@font/roboto_light"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/activity_add_card_btn_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_booking_button_hieght"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_normal_background"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/activity_add_card_btn_add"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

