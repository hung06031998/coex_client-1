<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginLeft="@dimen/dialog_margin"
    android:layout_marginRight="@dimen/dialog_margin"
    android:orientation="vertical"
    android:paddingBottom="100dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_height">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/title_14_pink_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/dialog_view_more_title" />

            <ImageView
                android:id="@+id/dialog_view_more_btn_close"
                android:layout_width="@dimen/activity_booking_btn_back_height"
                android:layout_height="@dimen/activity_booking_btn_back_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dialog_margin"
                android:src="@drawable/ic_close_black_24dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin_left"
        android:layout_marginTop="@dimen/text_margin_top_higher"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/dialog_show_more_item_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/detail_type_2_wifi"
                android:layout_width="@dimen/activity_detail_coex_img_item_height"
                android:layout_height="@dimen/activity_detail_coex_img_item_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/text_margin_left"
                android:src="@drawable/ic_wifi" />

            <TextView
                style="@style/title_13_silver_black_regular"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/detail_coex_type_2_item_margin"
                android:layout_toRightOf="@id/detail_type_2_wifi"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/detail_coex_wifi" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_show_more_item_drink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin_top">

            <ImageView
                android:id="@+id/detail_type_2_drink"
                android:layout_width="@dimen/activity_detail_coex_img_item_height"
                android:layout_height="@dimen/activity_detail_coex_img_item_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/text_margin_left"
                android:src="@drawable/ic_drink" />

            <TextView
                style="@style/title_13_silver_black_regular"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/detail_coex_type_2_item_margin"
                android:layout_toRightOf="@id/detail_type_2_drink"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/detail_coex_drink" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_show_more_item_printer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin_top">

            <ImageView
                android:id="@+id/detail_type_2_printer"
                android:layout_width="@dimen/activity_detail_coex_img_item_height"
                android:layout_height="@dimen/activity_detail_coex_img_item_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/text_margin_left"
                android:src="@drawable/ic_printer" />

            <TextView
                style="@style/title_13_silver_black_regular"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/detail_coex_type_2_item_margin"
                android:layout_toRightOf="@id/detail_type_2_printer"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/detail_coex_printer" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_show_more_item_con_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin_top">

            <ImageView
                android:id="@+id/detail_type_2_conversion_call"
                android:layout_width="@dimen/activity_detail_coex_img_item_height"
                android:layout_height="@dimen/activity_detail_coex_img_item_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/text_margin_left"
                android:src="@drawable/ic_conversion_call" />

            <TextView
                style="@style/title_13_silver_black_regular"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/detail_coex_type_2_item_margin"
                android:layout_toRightOf="@id/detail_type_2_conversion_call"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/detail_coex_conversion_call" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_show_more_item_air_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin_top">

            <ImageView
                android:id="@+id/detail_type_2_air_conditioning"
                android:layout_width="@dimen/activity_detail_coex_img_item_height"
                android:layout_height="@dimen/activity_detail_coex_img_item_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/text_margin_left"
                android:src="@drawable/ic_air_conditioning" />

            <TextView
                style="@style/title_13_silver_black_regular"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/detail_coex_type_2_item_margin"
                android:layout_toRightOf="@id/detail_type_2_air_conditioning"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/detail_coex_air_conditioning" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detail_type_2_orther_service"
                android:layout_width="@dimen/activity_detail_coex_img_item_height"
                android:layout_height="@dimen/activity_detail_coex_img_item_height"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/text_margin_left"
                android:src="@drawable/ic_nav_home" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_1"
                    style="@style/title_14_pink_bold"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/detail_coex_type_2_item_margin"
                    android:layout_toRightOf="@id/detail_type_2_orther_service"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/dialog_view_more_orther_service"
                    android:textColor="@color/silver_black" />

                <TextView
                    android:id="@+id/dialog_show_more_txt_orther"
                    style="@style/title_13_silver_black_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/detail_coex_type_2_item_margin"
                    android:layout_toRightOf="@id/detail_type_2_orther_service"
                    android:maxLines="3"
                    android:text="Coffee, beer, sport room. simply dummy text of the printing and typesetting" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>