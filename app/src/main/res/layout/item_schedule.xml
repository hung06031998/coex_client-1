<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_shcedule_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/text_margin_top"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_item_schedule"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/detail_coex_type_1_margin"
        android:layout_marginTop="@dimen/detail_coex_margin_top"
        android:layout_marginRight="@dimen/detail_coex_type_1_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_schedule_img_main"
            android:layout_width="100dp"
            android:layout_height="64dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/bg_no_image_big"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="@dimen/detail_coex_weight"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/detail_coex_type_1_image_margin"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_schedule_txt_name_coo"
                    style="@style/title_14_pink_bold"

                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:text="COEX Working" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/item_schedule_txt_booking_refe"
                        style="@style/title_13_silver_black_regular"
                        android:layout_width="100dp"
                        android:textAlignment="textEnd"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/main_color"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="16dp"
                        android:maxLines="1"
                        android:text="#123456789"
                        />


                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/item_schedule_txt_description"
                style="@style/title_13_silver_black_regular"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:text="No.1 Pham Van Bach, Yen Hoa, Cau Giay, Ha Noi." />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_margin_top_higher"
        android:layout_marginLeft="@dimen/detail_coex_type_1_margin"
        android:layout_marginRight="@dimen/detail_coex_type_1_margin"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_detail_coex_hight_space"
            android:background="#e4e4e4" />

        <TextView
            android:id="@+id/item_schedule_txt_date"
            style="@style/title_9_silver_regular"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true"
            android:textColor="@color/edit_text_focus"
            android:textAlignment="textEnd"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:maxLines="1"
            android:text="00:00 - 10 04 2020"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>