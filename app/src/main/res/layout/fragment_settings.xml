<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_booking_status_bar_height">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_booking_status_bar_height">

                <TextView
                    style="@style/title_14_pink_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/fragment_setting_txt_title" />

                <TextView
                    android:id="@+id/fragment_setting_txt_logout"
                    style="@style/title_12_blue_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/text_margin_left"
                    android:text="@string/fragment_setting_txt_log_out" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/framgnet_setting_layout_margin"
            android:layout_marginRight="@dimen/framgnet_setting_layout_margin"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <com.upit.coex.user.repository.model.custom.SquareView
                android:id="@+id/fragment_setting_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/framgnet_setting_item_margin"
                android:layout_weight="1"
                android:background="@drawable/bg_fragment_setting_item">

                <RelativeLayout
                    android:layout_width="@dimen/fragment_setting_item_height"
                    android:layout_height="@dimen/fragment_setting_item_height"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/framgnet_setting_margin_top">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_ellipse_20" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="18dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/logo" />
                </RelativeLayout>

                <TextView
                    style="@style/title_14_pink_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/fragment_setting_item_description_margin"
                    android:text="@string/fragment_setting_txt_profile"
                    android:textAllCaps="true"
                    android:textSize="16sp" />
            </com.upit.coex.user.repository.model.custom.SquareView>

            <com.upit.coex.user.repository.model.custom.SquareView
                android:id="@+id/fragment_setting_p_and_r"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/framgnet_setting_item_margin"
                android:layout_weight="1"
                android:background="@drawable/bg_fragment_setting_item">

                <RelativeLayout
                    android:layout_width="@dimen/fragment_setting_item_height"
                    android:layout_height="@dimen/fragment_setting_item_height"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/framgnet_setting_margin_top">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_pandr" />
                </RelativeLayout>

                <TextView
                    style="@style/title_14_pink_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/fragment_setting_item_description_margin"
                    android:text="@string/fragment_setting_txt_p_and_r"
                    android:textAllCaps="true"
                    android:textSize="16sp" />
            </com.upit.coex.user.repository.model.custom.SquareView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/framgnet_setting_layout_margin"
            android:layout_marginRight="@dimen/framgnet_setting_layout_margin"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.upit.coex.user.repository.model.custom.SquareView
                android:id="@+id/fragment_setting_my_wallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/framgnet_setting_item_margin"
                android:layout_weight="1"
                android:background="@drawable/bg_fragment_setting_item">

                <RelativeLayout
                    android:layout_width="@dimen/fragment_setting_item_height"
                    android:layout_height="@dimen/fragment_setting_item_height"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/framgnet_setting_margin_top">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_credit_card_1" />
                </RelativeLayout>

                <TextView
                    style="@style/title_14_pink_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/fragment_setting_item_description_margin"
                    android:text="@string/fragment_setting_txt_my_wallet"
                    android:textAllCaps="true"
                    android:textSize="16sp" />
            </com.upit.coex.user.repository.model.custom.SquareView>

            <com.upit.coex.user.repository.model.custom.SquareView
                android:id="@+id/fragment_setting_about_us"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/framgnet_setting_item_margin"
                android:layout_weight="1"
                android:background="@drawable/bg_fragment_setting_item">

                <RelativeLayout
                    android:layout_width="@dimen/fragment_setting_item_height"
                    android:layout_height="@dimen/fragment_setting_item_height"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/framgnet_setting_margin_top">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_aboutus" />
                </RelativeLayout>

                <TextView
                    style="@style/title_14_pink_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/fragment_setting_item_description_margin"
                    android:text="@string/fragment_setting_txt_about_us"
                    android:textAllCaps="true"
                    android:textSize="16sp" />
            </com.upit.coex.user.repository.model.custom.SquareView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/framgnet_setting_layout_margin"
            android:layout_marginRight="@dimen/framgnet_setting_layout_margin"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.upit.coex.user.repository.model.custom.SquareView
                android:id="@+id/fragment_setting_policy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/framgnet_setting_item_margin"
                android:layout_weight="1"
                android:background="@drawable/bg_fragment_setting_item">

                <RelativeLayout
                    android:layout_width="@dimen/fragment_setting_item_height"
                    android:layout_height="@dimen/fragment_setting_item_height"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/framgnet_setting_margin_top">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_policy" />
                </RelativeLayout>

                <TextView
                    style="@style/title_14_pink_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/fragment_setting_item_description_margin"
                    android:text="@string/fragment_setting_txt_policy"
                    android:textAllCaps="true"
                    android:textSize="16sp" />
            </com.upit.coex.user.repository.model.custom.SquareView>

            <com.upit.coex.user.repository.model.custom.SquareView
                android:id="@+id/fragment_setting_general"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/framgnet_setting_item_margin"
                android:layout_weight="1"
                android:background="@drawable/bg_fragment_setting_item">

                <RelativeLayout
                    android:layout_width="@dimen/fragment_setting_item_height"
                    android:layout_height="@dimen/fragment_setting_item_height"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/framgnet_setting_margin_top">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_general" />
                </RelativeLayout>

                <TextView
                    style="@style/title_14_pink_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/fragment_setting_item_description_margin"
                    android:text="@string/fragment_setting_txt_general"
                    android:textAllCaps="true"
                    android:textSize="16sp" />
            </com.upit.coex.user.repository.model.custom.SquareView>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>